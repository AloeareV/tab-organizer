{
  "private": true,
  "name": "tab-organizer",
  "version": "5.0.0-beta",
  "devDependencies": {
    "bower": "^1.8.0",
    "pulp": "^10.0.0",
    "purescript": "^0.10.3",
    "rollup": "^0.41.4",
    "rollup-plugin-purs": "^1.0.31",
    "rollup-plugin-sourcemaps": "^0.4.1"
  },
  "scripts": {
    "postinstall": "bower install && mkdir -p build/js && yarn run build",
    "build": "pulp build -- --source-maps && yarn run build:server",
    "build:panel": "pulp build --main Panel.Main --optimise --to build/js/panel.js",
    "build:server": "rollup --config build.server.js",
    "build:options": "rollup --config build.options.js",
    "test": "pulp test",
    "psci": "pulp psci",
    "bower:install": "bower install --save-dev"
  }
}
