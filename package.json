{
  "private": true,
  "name": "tab-organizer",
  "version": "5.0.0-beta",
  "devDependencies": {
    "bower": "^1.7.9",
    "pulp": "^9.0.1",
    "purescript": "^0.10.2"
  },
  "scripts": {
    "postinstall": "bower install && mkdir -p build/js && yarn run build",
    "build": "yarn run build:panel && yarn run build:server && yarn run build:options",
    "build:panel": "pulp build --main Panel.Main --optimise --to build/js/panel.js",
    "build:server": "pulp build --main Server.Main --optimise --to build/js/server.js",
    "build:options": "pulp build --main Options.Main --optimise --to build/js/options.js",
    "test": "pulp test",
    "psci": "pulp psci",
    "bower:install": "bower install --save-dev"
  }
}
